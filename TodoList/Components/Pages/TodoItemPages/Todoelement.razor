<div class="card">
    <div class="card-header">
        @Item.Title
    </div>
    <div class="card-body">
        <p><strong>Priority:</strong> @Item.Priority</p>
        <p><strong>Due Date:</strong> @Item.DueDate.HasValue ? TodoItem.DueDate.Value.ToShortDateString() : "Not specified"</p>
    </div>
</div>



@code {
    [Parameter]
    public TodoItem Item { get; set; }

    [CascadingParameter]
    public bool DisplayDeletedItems { get; set; } = false;


}
