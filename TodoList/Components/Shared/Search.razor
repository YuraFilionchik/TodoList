<div class="search-container  d-flex justify-content-center mb-4">
    <InputText class="search-input" @bind-Value="Text" placeholder="Search..."></InputText>
    <button class="clear-button" @onclick="(()=>Text=string.Empty)">&times;</button>
</div>

@code {
    private string _text = string.Empty;
    [Parameter]
    public string Text
    {
        get => _text;
        set
        {
            if (value == _text)
                return;

            _text = value;
            if (TextChanged.HasDelegate)
            {
                TextChanged.InvokeAsync(_text);
            }
        }
    }
    [Parameter]
    public EventCallback<string> TextChanged { get; set; }

  
}
